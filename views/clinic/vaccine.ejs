<!DOCTYPE html>
<html lang="en">

<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>Vaccine Registration System - Dashboard</title>
   <!-- <link rel="icon" href="./images/Icon.png"> -->

   <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

   <script src="https://kit.fontawesome.com/61968f357f.js" crossorigin="anonymous"></script>
</head>

<body>
   <!-- Navigation Bar -->
   <nav id="menu" class="navbar navbar-expand-md navbar-light bg-light fixed-top">
      <a class="navbar-brand" href="/">
         <!-- <img src="/images/Icon.png" class="d-inline-block align-top nav-img" alt="Vaccine Registration System"> -->
         Vaccine Vacinaton System
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
         aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
         <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
         <ul class="navbar-nav ml-auto">
            
            <li class="nav-item ml-2">
               <a class="nav-link btn btn-outline-secondary my-2 my-sm-0"  href="/clinics">Back to All Clinic List</a>
            </li>
         </ul>
      </div>
   </nav>

   <div class="my-4 py-4"> </div>


   <section id="overview">
      <div class="container">
         <h1 class="font-weight-bold">Hello please choose what vaccine you would like to add to this clinic:</h1>
      </div>
   </section>

   <div class="my-4 py-4"> </div>

   <section id="appointments">
      <div class="container-fluid background-light justify-content-center pt-5">
         <div class="row justify-content-around">

            <% for(const vaccine of noVaccines) { %>
             <div class="col-md-10">   
               <div class="card">
                  <div class="card-header container-fluid">
                     <h5 class="mb-0 d-flex">
                         <button class="btn btn-link">
                           <%= vaccine.Name %>
                         </button>
                         <form class="m-0 p-0" action="/clinics/<%= clinicID %>/vaccines/<%= vaccine.ID %>/enroll" method="POST">
                             <button class="btn btn-success float-right">
                                 <i class="fas fa-plus-square"></i>
                             </button>
                         </form>
                     </h5>
                  </div>
               </div>
            </div>
            <% } %>

            <% for(const vaccine of vaccines) { %>
               <div class="col-md-10">   
                 <div class="card">
                    <div class="card-header container-fluid">
                       <h5 class="mb-0 d-flex">
                           <button class="btn btn-link">
                             <%= vaccine.Name %>
                           </button>
                           <form class="m-0 p-0" action="/clinics/<%= clinicID %>/vaccines/<%= vaccine.ID %>/remove/?_method=DELETE" method="POST">
                              <button class="btn btn-danger float-right">
                                  <i class="fa fa-trash"></i>
                              </button>
                          </form>
                       </h5>
                    </div>
                 </div>
              </div>
              <% } %>


         </div>
     </div>
   </section>

</body>

</html>