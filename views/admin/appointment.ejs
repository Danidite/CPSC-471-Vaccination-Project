<!DOCTYPE html>
<html lang="en">

<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>Vaccine Registration System - Admin Page</title>
   <!-- <link rel="icon" href="./images/Icon.png"> -->

   <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

   <script src="https://kit.fontawesome.com/61968f357f.js" crossorigin="anonymous"></script>
</head>

<body>
   <!-- Navigation Bar -->
   <nav id="menu" class="navbar navbar-expand-md navbar-light bg-light fixed-top">
      <a class="navbar-brand" href="/">
         <!-- <img src="/images/Icon.png" class="d-inline-block align-top nav-img" alt="Vaccine Registration System"> -->
         Vaccine Vacinaton System
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
         aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
         <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
         <ul class="navbar-nav ml-auto">
            <li class="nav-item ml-2">
               <a class="nav-link btn btn-outline-secondary my-2 my-sm-0"  href="/admin">Back to Dashboard</a>
            </li>
         </ul>
      </div>
   </nav>

   <div class="my-4 py-4"> </div>

   
  <div class="jumbotron">
   <div class="container">
       <h1 class="display-5">Welcome to All Appointment Lists</h1>
       <p class="lead">This Shows all the pending, accepted, and completed appointments</p>
   </div>
</div>
   
   
   <section id="vaccine-list">
      <div class="row">
         <% for(const appointment of appointments) { %>
         <div class="container col-md-6 col-lg-5 col-xl-4 p-1">
            <div class="card p-0 text-center">
                <div class="card-body">
                     <h5 class="card-title text-center"><%= appointment.FName %> <%= appointment.MName %> <%= appointment.LName %> (<%= appointment.ID %>) - "<%= appointment.VName %>" - "<%= appointment.CName %>" - <%= appointment.Date %></h5>
                </div>
                <div class="card-footer text-muted">
                    <div><%= appointment.Status %></div>
                </div>
            </div>
        </div>
        <% } %>
  </div>
   </section>

</body>

</html>